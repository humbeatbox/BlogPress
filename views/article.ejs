<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/site.css" rel="stylesheet" />
    <title>Article Details</title>
    <style>
      .content-wrapper {
        padding-bottom: 100px; /* for footer */
      }
    </style>
  </head>
  <body class="d-flex flex-column min-vh-100">
    <!-- nav bar -->
    <%- include('partials/nav', {active: 'articles'}); %>

    <div class="container mt-4 flex-grow-1 content-wrapper">
      <!-- for each article will show the content if error will shows error  -->
      <% if (typeof message !== 'undefined') { %>
      <!-- for error message -->
      <div class="alert alert-danger"><%= message %></div>
      <a href="/articles" class="btn btn-primary">Back to Articles</a>
      <% } else if (typeof article !== 'undefined') { %>

      <!-- article content -->
      <article class="bg-light p-4 rounded">
        <!-- if no picture in the object of JSON file, it will not show -->
        <!-- not been test yet!!!!!!!!!!!!!!! -->
        <% if (article.featureImage) { %>
        <div class="mt-4">
          <img
            src="<%= article.featureImage %>"
            alt="<%= article.title %>"
            class="img-fluid"
            style="max-width: 300px; max-height: 300px; object-fit: contain"
          />
        </div>
        <% } %>
        <p><strong>Author:</strong> <%= article.author %></p>
        <p><strong>Category:</strong> <%= article.categoryName %></p>
        <p><strong>Article Date:</strong> <%= article.articleDate %></p>
        <div class="article-content mt-4">
          <p><%= article.content %></p>
        </div>

        <!-- back to articles page -->
        <div class="mt-4">
          <a href="/articles" class="btn btn-primary">Back to Articles</a>
        </div>
      </article>
      <% } else { %>
      <div class="alert alert-danger">
        Article not found or is not published.
      </div>
      <a href="/articles" class="btn btn-primary">Back to Articles</a>
      <% } %>
    </div>
    <!-- footer -->
    <%- include('partials/footer'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
