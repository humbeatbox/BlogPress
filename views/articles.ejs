<!-- views/articles.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/site.css" rel="stylesheet" />
    <title>Articles</title>
  </head>
  <body>
    <div>
      <div class="container-fluid">
        <a class="navbar-brand" href="/">My Blog</a>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/articles">Articles</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/categories">Categories</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/articles/add">Add Article</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container mt-4" role="main">
      <h1>Articles</h1>

      <% if (typeof message !== 'undefined') { %>
      <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- list all articles -->
      <% if (typeof articles !== 'undefined' && articles.length > 0) { %>
      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach(article => { %> <% if (article.published) { %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.author %></td>
            <td>
              <!-- category is the clickable link for user click and get the route -->
              <a href="/articles?category=<%= article.category %>">
                <%= article.category %>
              </a>
            </td>
            <td><%= article.articleDate %></td>
          </tr>
          <% } %> <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <div class="alert alert-info">No articles found.</div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
